
<div id="background">
  <%= image_tag "background.png", :class => "stretch" %>
    <div id="fullDiv">

<div class="centerthisbitch"><br/><br/>

<%= form_for(@story) do |f| %>
  <%= hidden_field_tag "story[title]", @template.title %>
  <%= hidden_field_tag :template, @template.id %>
  <div class="field">
    <%= f.label "Pick a friend" %><br />
    <%= select(:story, :friend_id_1, @friends, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Pick another friend" %><br />
    <%= select(:story, :friend_id_2, @friends, {:include_blank => true}) %>
  </div>
  <% @keywords.each do |key, values| %>
    <% values.each do |value| %>
      <div class="field">
        <%= f.label "Pick a #{key.downcase}" %><br />
        <%= text_field(:keyword, value) %>
      </div>
    <% end %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

</div>
</div></div>
